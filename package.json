{
  "name": "simple-website-screenshot-tool",
  "version": "0.1.0",
  "type": "module",
  "description": "A simple client-side screenshotter that doesn't require a server",
  "keywords": [
    "browser",
    "screenshot"
  ],
  "author": {
    "name": "Oleg Barabanov",
    "url": "https://olegbarabanov.ru"
  },
  "main": "./dist/ScreenshotCapture.js",
  "types": "./dist/ScreenshotCapture.d.ts",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/olegbarabanov/simple-website-screenshot-tool/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/olegbarabanov/simple-website-screenshot-tool.git"
  },
  "homepage": "https://github.com/olegbarabanov/simple-website-screenshot-tool",
  "scripts": {
    "clean": "gts clean",
